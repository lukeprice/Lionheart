<div class="main-content">
<%= image_tag("news-shadow.png", :class => "page-title" ) %>
  <p class="page-title">News</p>
  <br /><br /><br /><br />
  <div class="content-left"></div>
<div class="content-right">
<% if admin_signed_in? %><%= link_to 'New News Post', new_news_path %><% end %>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= link_to news.title, news_path(news) %>: <%=h truncate(news.content, :length => 40) %></td>
    <td><% if admin_signed_in? %><%= link_to 'Show', news %><% end %></td>
    <td><% if admin_signed_in? %><%= link_to 'Edit', edit_news_path(news) %><% end %></td>
    <td><% if admin_signed_in? %><%= link_to 'Destroy', news, confirm: 'Are you sure?', method: :delete %><% end %></td>
  </tr>
<% end %>
</table>

<br />
</div>
</div>